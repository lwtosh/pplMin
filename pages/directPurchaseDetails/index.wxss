page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

swiper {
  height: 311px;
  position: relative;
}

.slide-image {
  width: 100%;
  height: 100%;
  display: block;
  margin: auto;
}

.cont1 {
  padding: 8px 15px;
  margin: auto;
  background: #fff;
  padding-bottom: 0px;
}

.title {
  float: left;
  font-size: 33rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #404040;
  width: 100%;
  text-align: left;
  line-height: 24px;
}
.hd {
  width: 100%;
}

.left {
  float: left;
  color: #F52A6A;
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 15rpx;
}

.left .mon {
  font-size: 16px;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  margin-right: 5px;
}
.left-bd, .right {
  line-height: 20px;
  font-weight: 500;
  font-size: 22rpx;
  flex-grow: 1;
  text-align: left;
  color: #999;
}
.right{
    text-align: right
}
.th {
  text-decoration: line-through;
}
.foot {
  display: flex;
  width: 100%;
  flex-wrap: nowrap;
  align-items: center;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.content {
  text-align: left;
  font-size: 14px;
  color: #404040;
  margin: 0px 0 7px 0px;
}

.footer {
  text-align: left;
  font-size: 14px;
  color: #404040;
  background:#FFF8FA;
  border-radius:3px;
  margin-bottom: 10px;
  line-height: 1.5;
  padding: 20rpx 20rpx;
}

.cont2 {
  margin-top: 10rpx;
  padding: 10px 10px 5px 15px;
  background: #fff;
}
.btn {
  position: fixed;
  z-index: 999;
  bottom: 0;
  width: 100%;
  line-height: 2.5;
  text-align: center;
  font-size: 17px;
  margin-top: -10px;
  background: linear-gradient(90deg, rgba(244, 81, 85, 1) 0%, rgba(245, 30, 115, 1) 100%);
  color: #fff;
  border-radius: 0px;
}
 image{
width: 100%;
}